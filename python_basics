#python comprehensions programming loops conditions uppercase lowercase

#extract uppercase from a string
>>> s = 'abcdefgABCDEFGHIJKLMNOP'
>>> ''.join([c for c in s if c.isupper()])
'ABCDEFGHIJKLMNOP'

#Regex Method:
>>> re.sub('[^A-Z]', '', s)
'ABCDEFGHIJKLMNOP'

#for/if method with isupper:
for s in quote:
    for x in s:
        if x.isupper():
            print(x)
            
#check if in string method:
for char in quote:
    if char in "ABCDEFGHIJKLMNOPQRSTUVWXYZ":
        print(char, end='')
        
#iterate through range with step (prints every number divisible by 7, 0 to 100):
for i in range(0, 100, 7):
    print(i)
    
#print numbers that AREN'T divisible by 3 or 5:
for i in range(0, 20):
    if (i % 3 == 0) or (i % 5 == 0):
        continue
    print(i)

#augmented assignment:
for i in range(0, multiplier):
    answer += number
